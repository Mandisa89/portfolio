<%- include("partials/header.ejs") %>

<div class="container-fluid heading-box">
  <div class="row align-items-center">
    <div class="col">
      <h1>Edit Post</h1>
    </div>
  </div>
</div>

<div class="container main-content">
  <form action="/posts/<%= post.id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="postSubject" class="form-label">Title</label>
      <input
        type="text"
        class="form-control"
        name="postSubject"
        id="postSubject"
        value="<%= post.subject %>"
        required
      />
    </div>

    <div class="mb-3">
      <label for="postBody" class="form-label">Body</label>
      <textarea
        class="form-control"
        name="postBody"
        id="postBody"
        rows="5"
        required
      >
<%= post.body %></textarea
      >
    </div>
    <a href="/posts" class="card-link navigate"> << Back</a>
    <button type="submit" class="pink-btn">Update Post</button>
  </form>
</div>

<%- include("partials/footer.ejs") %>
